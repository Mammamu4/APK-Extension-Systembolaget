{
  "manifest_version": 3,
  "name": "Systemet APK",
  "description": "Gets APK for systemet products",
  "version": "1.1",
  "icons": {
    "16": "images/razor-16.png",
    "32": "images/razor-32.png",
    "48": "images/razor-48.png",
    "128": "images/razor-128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "js": ["content-script.js", "utils/formatProductDetails.js"],
      "matches": ["https://www.systembolaget.se/sortiment*"]
    },
    {
      "js": ["product-script.js", "utils/formatProductDetails.js"],
      "matches": ["https://www.systembolaget.se/produkt*"]
    }
  ],
  
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
